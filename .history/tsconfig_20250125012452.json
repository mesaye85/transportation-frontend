{
 "compilerOptions": {
"paths": {
  "@/*": ["src/*"],
  "@/components/*": ["components/*"],
  "@/services/*": ["services/*"],
  "@/*": ["*"]
},

  "allowJs": true,
  "skipLibCheck": true,
  "strict": true,
  "noEmit": true,
  "esModuleInterop": true,
  "module": "esnext",
  "moduleResolution": "node",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "jsx": "preserve",
  "incremental": true,
  "baseUrl": "./src", // Allows "@/services/api"
  "plugins": [
    {
      "name": "next"
    }
  ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
